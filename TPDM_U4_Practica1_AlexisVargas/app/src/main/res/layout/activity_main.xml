<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="JUEGO DE DADOS"
            android:textSize="30dp"
            android:textAlignment="center"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:srcCompat="@drawable/d" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ronda:"
            android:textSize="20dp"
            />
        <EditText
            android:id="@+id/ronda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="5"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:text="Iniciar"
            android:gravity="center"
            android:id="@+id/btn"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jugador 1:"
            android:textSize="20dp"
            android:layout_margin="5dp"
            />
        <ImageView
            android:id="@+id/j1d1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/d1"
            android:layout_marginLeft="10dp"
            />

        <ImageView
            android:id="@+id/j1d2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/d2"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/tiroj1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tiro 1:"
            android:layout_marginLeft="10dp"
            />
        <EditText
            android:id="@+id/j1suma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="2"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jugador 2:"
            android:textSize="20dp"
            android:layout_margin="5dp"
            />
        <ImageView
            android:id="@+id/j2d1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/d1"
            android:layout_marginLeft="10dp"
            />

        <ImageView
            android:id="@+id/j2d2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/d2"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/tiroj2"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tiro 1:"
            />
        <EditText
            android:layout_marginLeft="10dp"
            android:id="@+id/j2suma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="2"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jugador 3:"
            android:textSize="20dp"
            android:layout_margin="5dp"
            />
        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/j3d1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/d1" />

        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/j3d2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/d2"
            />
        <TextView
            android:id="@+id/tiroj3"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tiro 1:"
            />
        <EditText
            android:layout_marginLeft="10dp"
            android:id="@+id/j3suma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="2"/>

    </LinearLayout>








</LinearLayout>